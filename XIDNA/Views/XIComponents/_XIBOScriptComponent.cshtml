                                        }
                                        else
                                        {
                                            var PairCount = oSDef.ScriptResults.Count();
                                            if (PairCount != 0)
                                            {
                                                PairCount = oSDef.ScriptResults.Count() - 1;
                                            }
                                            <input type="button" id="AddMoreResults" value="Add" class="btn btn-theme btn-xs" data-pairno="@PairCount">
                                        }

                                    </div>
                                </div>
