@model XICore.XIIComponent
@using XISystem
@using XICore
@{
    XIDScript oSDef = new XIDScript();
    if (Model.oContent.ContainsKey(XIConstant.XIBOScriptComponent))
    {
        oSDef = (XIDScript)Model.oContent[XIConstant.XIBOScriptComponent];
        if (oSDef == null)
        {
            oSDef = new XIDScript();
        }
    }
}

