@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    string PhysicalPath = System.Configuration.ConfigurationManager.AppSettings["PhysicalPath"];
}
<script src="~/Scripts/ajaxfileupload.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#OrgEdittabs').tabs();
        $("#EditContact").hide();
        $("#NewImage").hide();
        $("#ViewGeneral").hide();
        $("#ViewContact").hide();
        $('#EditClasses').hide();
        $('#ViewClasses').hide();
        $('#EditLocations').hide();
        $('.orgCancel').click(function () {
            window.close();
        });
        $("#backcon").click(function () {
            $('#ViewContact').hide();
            $('#EditContact').show();
            @*var id = parseInt('@Model.ID');
            $.ajax({
                url: '@Url.Action("GetOrganizationDetails", "Organization")',
                type: 'GET',
                datatype: 'JSON',
                data: { orgid: id },
                success: function (data) {
                    $("#EditContact").show();
                    $("#EditGeneral").hide();
                    $("#AddEmpForm").hide();
                    $("#backcon").hide();
                    $('li#generaldetails').removeClass('disabled');
                    $('li#orgclass').removeClass('disabled');
                },
                error: function (data) {
                },
            });*@
        })
        $("#backgen").click(function () {
            $('#ViewGeneral').hide();
            $('#EditGeneral').show();
            @*var id = parseInt('@Model.ID');
            $.ajax({
                url: '@Url.Action("GetOrganizationDetails", "Organization")',
                type: 'GET',
                datatype: 'JSON',
                data: { orgid: id },
                success: function (data) {
                    $("#EditContact").hide();
                    $("#EditGeneral").show();
                    $("#ViewGeneral").hide();
                    $("#backgen").hide();
                    $('li#contactdetails').removeClass('disabled');
                    $('li#orgclass').removeClass('disabled');
                },
                error: function (data) {
                },
            });*@
        })
        $('#backclass').click(function () {
            $('#ViewClasses').hide();
            $('#EditClasses').show();
        });
        $("#upload").click(function () {
            $("#NewImage").show();
            $("#dvPreview").hide();
        })
        $("#viewgen").click(function () {
            var id = parseInt('@Model.ID');
            $.ajax({
                url: '@Url.Action("GetOrgEditUpdatedData", "Organization")',
                type: 'GET',
                datatype: 'html',
                data: { OrgID: id },
                cache: false,
                success: function (data) {
                    var GenView = $(data).find('.ViewGenForm');
                    $('.ViewGenForm').html(GenView.html());
                    $('#EditGeneral').hide();
                    $('#EditContact').hide();
                    $('#EditClasses').hide();
                    $('#ViewGeneral').show();

                },
                error: function (data) {
                },
            });
        })


        $("#viewcon").click(function () {
            var id = parseInt('@Model.ConOrganizationID');
            $.ajax({
                url: '@Url.Action("GetOrgEditUpdatedData", "Organization")',
                type: 'GET',
                datatype: 'html',
                data: { OrgID: id },
                cache: false,
                success: function (data) {
                    $("#EditGeneral").hide();
                    $("#EditContact").hide();
                    $('#OrgClasses').hide();
                    $("#ViewContact").show();
                    var ConView = $(data).find('.ViewConForm');
                    $('.ViewConForm').html(ConView.html());
                },
                error: function (data) {
                },
            });
        })
        $("#viewclassesbtn").click(function () {
            var id = parseInt('@Model.OrganizationID');
            $.ajax({
                url: '@Url.Action("GetOrgEditUpdatedData", "Organization")',
                type: 'GET',
                datatype: 'html',
                data: { OrgID: id },
                cache: false,
                success: function (data) {
                    $('#EditClasses').hide();
                    $("#EditGeneral").hide();
                    $("#EditContact").hide();
                    $('#ViewClasses').show();
                    var ClassView = $(data).find('#OrgClassesList');
                    $('#OrgClassesList').html(ClassView.html());
                    $("#AddEmpForm").show();
                    $("#backcon").show();
                },
                error: function (data) {
                },
            });
        })
        $('#backclass').click(function () {
            $('#EditClasses').show();
            $('#ViewClasses').hide();
        });
        $('#contactdetails').click(function () {
            $('#EditGeneral').hide();
            $('#ViewGeneral').hide();
            $('#EditClasses').hide();
            $('#ViewClasses').hide();
            $("#ViewContact").hide();
            $('#EditLocations').hide();
            $('#EditContact').show();
            $('#generaldetails').removeClass('active');
            $('#orgclass').removeClass('active');
            $('#contactdetails').addClass('active');
            $('#locdetails').removeClass('active');

        });
        $('#generaldetails').click(function () {
            $('#EditContact').hide();
            $('#ViewContact').hide();
            $('#EditClasses').hide();
            $('#ViewClasses').hide();
            $('#EditGeneral').show();
            $('#EditLocations').hide();
            $('#ViewGeneral').hide();
            $('#contactdetails').removeClass('active');
            $('#orgclass').removeClass('active');
            $('#generaldetails').addClass('active');
            $('#locdetails').removeClass('active');
        });
        $('#orgclass').click(function () {
            $('#EditContact').hide();
            $('#EditGeneral').hide();
            $('#ViewGeneral').hide();
            $('#ViewContact').hide();
            $('#ViewClasses').hide();
            $('#EditLocations').hide();
            $('#EditClasses').show();
            $('#contactdetails').removeClass('active');
            $('#generaldetails').removeClass('active');
            $('#orgclass').addClass('active');
            $('#locdetails').removeClass('active');
        });
        $('#locdetails').click(function () {
            $('#EditContact').hide();
            $('#EditGeneral').hide();
            $('#ViewGeneral').hide();
            $('#ViewContact').hide();
            $('#ViewClasses').hide();
            $('#EditClasses').hide();
            $('#EditLocations').show();
            $('#contactdetails').removeClass('active');
            $('#generaldetails').removeClass('active');
            $('#orgclass').removeClass('active');
            $('#locdetails').addClass('active');
        });
    })

    $(function () {

        $("#UploadImage").change(function () {
            $("#dvPreview").html("");
            if (typeof (FileReader) != "undefined") {
                $("#dvPreview").show();
                $("#dvPreview").append("<img />");
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#dvPreview img").attr("src", e.target.result);
                }
                reader.readAsDataURL($(this)[0].files[0]);
            }
        });

    })

</script>
