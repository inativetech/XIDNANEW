</style>

<div id="Fields box-body">
    <div class="table-clean">
        <table class="table table-striped custom-table dark-head dark-head2 table-condensed" id="Fielstable">
            <thead>
                <tr role="row">
                    <th>S.No</th>
                    <th>ID</th>
                    <th>FieldCreatedID</th>
                    <th>OrganizationID</th>
                    <th>Field Name</th>
                    <th>Class Name</th>
                    <th>Field Type</th>
                    <th>Length</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody></tbody>

        </table>
    </div>
</div>
