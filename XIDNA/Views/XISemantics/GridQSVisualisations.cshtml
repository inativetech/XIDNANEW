    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="table-clean">
                        <table id="XIQSVisualtbl" class="table table-striped custom-table dark-head dark-head2 table-condensed">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>ID</th>
                                    <th>QuestionSet Name</th>
                                    <th>Step Name</th>
                                    <th>Field Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
