@model XIDNA.Models.cQSVisualisations

@{
    Layout = "~/Views/Shared/_XIDynawareLayout.cshtml";
}
<script>
    $(document).ready(function () {
        var Poppopups = new Array();
        var editpopups = new Array();
        var table = $('#XIQSVisualtbl').dataTable({
            "paging": true,
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("GetQSVisualisationsGrid", "XISemantics")",
            "aaSorting": [[1, 'desc']],
            "sDom": 'r<"dtable-header"l<"new-query">f><"datatable-scroll"t><"dtable-footer"ip>',
            "initComplete": function () {
                $("div.new-query").html('<button type="button" class="savebtn btn btn-theme" id="NewPopupBtn" data-url="@Url.Action("AddEditQSVisualisations", "XISemantics")" >Add</button>');
            },
            'bJQueryUI': false,
            "autoWidth": false,
            "aoColumns": [
        { "bSortable": false },
                             {
                                 "sName": "ID",
                                 "bVisible": false
                             },
                             {
                                 "sName": "QSName",
                             },
                            {
                                "sName": "Step Name",
                            },
                            {
                                "sName": "Field Name",
                            },
                            { "bSortable": false }
            ],
            "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $('td:eq(4)', nRow).html('<input type="button" class="EditPopup btn btn-theme btn-xs" id="' + aData[1] + '" value="Edit"/>');
                return nRow;
            }
        });
        $('#XIQSVisualtbl').on('click', 'input.EditPopup', function () {
            var ID = $(this).attr('id');
            if (editpopups.length > 0) {
                for (i = 0; i < editpopups.length; i++) {
                    editpopups[i].close();
                }
            }
            var editpopup = window.open('', '_blank', "scrollbars=1,resizable=1,width=" + screen.width + ", height=" + screen.height);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddEditQSVisualisations", "XISemantics")',
                data: { ID: ID },
                cache: false,
                async: false,
                dataType: 'html',
                success: function (data) {
                    with (editpopup.document) {
                        open();
                        write(data);
                        close();
                    }
                    editpopups.push(editpopup);
                    editpopup.moveTo(0, 0);
                }
            });
        })
        $('.new-query').on('click', 'button#NewPopupBtn', function () {
            var url = $(this).attr('data-url');
            if (Poppopups.length > 0) {
                for (i = 0; i < Poppopups.length; i++) {
                    Poppopups[i].close();
                }
            }
            var newpopup = window.open(url, '_blank', "scrollbars=1,resizable=1,width=" + screen.width + ", height=" + screen.height);
            Poppopups.push(newpopup);
            newpopup.moveTo(0, 0);
        });

    });
</script>

<style>
    .subnav {
        margin-bottom: 10px;
    }
</style>

<section class="content-header hedr">
    <h1> QS Visualisations </h1>
