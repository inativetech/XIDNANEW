                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>ID</th>
                                    <th>OrganizationID</th>
                                    <th>StageID</th>
                                    <th>Stage Name</th>
                                    <th>Sub Stage</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
